#!/usr/bin/expect -f  

set timeout 10
set src_file [lindex $argv 0]
set dest_file [lindex $argv 1]

set host [lindex $argv 2]
set user [lindex $argv 3]
set password [lindex $argv 4]
set port [lindex $argv 5]

spawn scp -P $port $user@$host:$dest_file $src_file 
expect 	"*assword:"

send "$password\n"

expect "100%"
expect eof
